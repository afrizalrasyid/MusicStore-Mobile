                android:layout_height="match_parent"
                android:rowCount="1"
                android:columnCount="4"
                android:layout_margin="5dp"
                android:layout_gravity="center_vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="150dp"
                    android:layout_height="200dp"
                    app:cardCornerRadius="15dp"
                    android:elevation="5dp"
                    android:layout_marginLeft="20dp"
                    android:layout_margin="10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="155dp"
                        android:paddingLeft="5dp"
                        android:layout_row="0"
                        android:layout_column="0"
                        android:text="Fender Startocaster"
                        android:fontFamily="@font/inter_regular"
                        android:textColor="@color/black" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_row="0"
                        android:layout_column="0"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="175dp"
                        android:fontFamily="@font/inter_bold"
                        android:text="Rp 8.600.000"
                        android:textColor="@color/black" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/product1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/product1"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="150dp"
                    android:layout_height="200dp"
                    app:cardCornerRadius="15dp"
                    android:elevation="5dp"
                    android:layout_marginLeft="20dp"
                    android:layout_margin="10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="155dp"
                        android:paddingLeft="5dp"
                        android:layout_row="0"
                        android:layout_column="0"
                        android:text="Yamaha Arius"
                        android:fontFamily="@font/inter_regular"
                        android:textColor="@color/black" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_row="0"
                        android:layout_column="0"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="175dp"
                        android:fontFamily="@font/inter_bold"
                        android:text="Rp 10.600.000"
                        android:textColor="@color/black" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/product2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/piano_product1"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="150dp"
                    android:layout_height="200dp"
                    app:cardCornerRadius="15dp"
                    android:elevation="5dp"
                    android:layout_marginLeft="20dp"
                    android:layout_margin="10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="155dp"
                        android:paddingLeft="5dp"
                        android:layout_row="0"
                        android:layout_column="0"
                        android:text="Pearl Export"
                        android:fontFamily="@font/inter_regular"
                        android:textColor="@color/black" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_row="0"
                        android:layout_column="0"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="175dp"
                        android:fontFamily="@font/inter_bold"
                        android:text="Rp 10.200.000"
                        android:textColor="@color/black" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/product3"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/drum_product3"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="150dp"
                    android:layout_height="200dp"
                    app:cardCornerRadius="15dp"
                    android:elevation="5dp"
                    android:layout_marginLeft="20dp"
                    android:layout_margin="10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="155dp"
                        android:paddingLeft="5dp"
                        android:layout_row="0"
                        android:layout_column="0"
                        android:text="Yamaha Pacifica"
                        android:fontFamily="@font/inter_regular"
                        android:textColor="@color/black" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_row="0"
                        android:layout_column="0"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="175dp"
                        android:fontFamily="@font/inter_bold"
                        android:text="Rp 3.000.000"
                        android:textColor="@color/black" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/product4"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/guitar_product3"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </GridLayout>

        </HorizontalScrollView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>