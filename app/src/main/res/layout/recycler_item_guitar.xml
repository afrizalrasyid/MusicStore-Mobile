<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/guitar_cards"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    android:layout_marginHorizontal="12dp"
    android:layout_marginVertical="12dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="8dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/guitar_image"
            android:layout_width="match_parent"
            android:layout_height="180dp"

            android:scaleType="centerInside"
            android:src="@drawable/add_image"
            app:shapeAppearanceOverlay="@style/roundedImageViewRounded" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guitar_name"
            android:text="Name"
            android:fontFamily="@font/poppins_semibold"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:layout_marginTop="190dp"
            android:layout_marginStart="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guitar_seri"
            android:text="Seri"
            android:fontFamily="@font/poppins_light"
            android:textColor="@color/black"
            android:textSize="11sp"
            android:layout_marginTop="210dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="10dp"/>

        <TextView
            android:layout_width="140dp"
            android:layout_height="12dp"
            android:id="@+id/guitar_price"
            android:text="Price"
            android:textColor="@color/maroon"
            android:textSize="8sp"
            android:layout_toEndOf="@+id/guitar_image"
            android:layout_below="@id/guitar_name"
            android:maxLines="0"
            android:layout_marginStart="20dp"/>

        <TextView
            android:layout_width="140dp"
            android:layout_height="12dp"
            android:id="@+id/guitar_about"
            android:text="Price"
            android:textColor="@color/maroon"
            android:textSize="8sp"
            android:layout_toEndOf="@+id/guitar_image"
            android:layout_below="@id/guitar_name"
            android:maxLines="0"
            android:layout_marginStart="20dp"/>


</androidx.cardview.widget.CardView>